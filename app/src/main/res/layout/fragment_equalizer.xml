<?xml version="1.0" encoding="utf-8"?>
<layout>

<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"

    tools:context=".ui.EqualizerFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="80dp"
        android:background="@color/white"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_preset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layoutManager="LinearLayoutManager"
            android:orientation="horizontal"
            android:overScrollMode="always"
            tools:listitem="@layout/item_preset"
            tools:itemCount="5"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#F7F5F0"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/reset_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="RESET"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/save_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="+SAVE"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/reset_name"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:progress="30"
            android:max="100"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bass_cl"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            android:overScrollMode="never"
            tools:listitem="@layout/item_equalizer"
            tools:itemCount="5"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bass_cl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recycler_view"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bass_conlt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <View
                    android:id="@+id/firstline"
                    android:layout_width="1dp"
                    android:layout_height="23dp"
                    android:background="#555555"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <View
                    android:id="@+id/secondline"
                    android:layout_width="33dp"
                    android:layout_height="1dp"
                    android:background="#555555"
                    android:layout_marginTop="23dp"
                    app:layout_constraintStart_toEndOf="@id/firstline"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/bass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="18dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/secondline"
                    android:text="BASS"
                    android:textSize="8sp"
                    android:textColor="#555555"/>
                <View
                    android:id="@+id/thirdline"
                    android:layout_width="33dp"
                    android:layout_height="1dp"
                    android:background="#555555"
                    android:layout_marginTop="23dp"
                    android:layout_marginStart="2dp"
                    app:layout_constraintStart_toEndOf="@id/bass"
                    app:layout_constraintTop_toTopOf="parent"/>
                <View
                    android:id="@+id/fourline"
                    android:layout_width="1dp"
                    android:layout_height="23dp"
                    android:background="#555555"
                    app:layout_constraintStart_toEndOf="@id/thirdline"
                    app:layout_constraintTop_toTopOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mid_cl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintStart_toEndOf="@id/bass_conlt"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:id="@+id/fifthline"
                    android:layout_width="53dp"
                    android:layout_height="1dp"
                    android:background="#555555"
                    android:layout_marginTop="23dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/mid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="18dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/fifthline"
                    android:text="MID"
                    android:textSize="8sp"
                    android:textColor="#555555"/>
                <View
                    android:id="@+id/sixline"
                    android:layout_width="53dp"
                    android:layout_height="1dp"
                    android:background="#555555"
                    android:layout_marginTop="23dp"
                    android:layout_marginStart="2dp"
                    app:layout_constraintStart_toEndOf="@id/mid"
                    app:layout_constraintTop_toTopOf="parent"/>
                <View
                    android:id="@+id/sevenline"
                    android:layout_width="1dp"
                    android:layout_height="23dp"
                    android:background="#555555"
                    app:layout_constraintStart_toEndOf="@id/sixline"
                    app:layout_constraintTop_toTopOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/treble_cl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintStart_toEndOf="@id/mid_cl"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:id="@+id/eightline"
                    android:layout_width="33dp"
                    android:layout_height="1dp"
                    android:background="#555555"
                    android:layout_marginTop="23dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/treble"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="18dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/eightline"
                    android:text="TREBLE"
                    android:textSize="8sp"
                    android:textColor="#555555"/>
                <View
                    android:id="@+id/nineline"
                    android:layout_width="33dp"
                    android:layout_height="1dp"
                    android:background="#555555"
                    android:layout_marginTop="23dp"
                    android:layout_marginStart="2dp"
                    app:layout_constraintStart_toEndOf="@id/treble"
                    app:layout_constraintTop_toTopOf="parent"/>
                <View
                    android:id="@+id/tenline"
                    android:layout_width="1dp"
                    android:layout_height="23dp"
                    android:background="#555555"
                    app:layout_constraintStart_toEndOf="@id/nineline"
                    app:layout_constraintTop_toTopOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
</layout>